#include<iostream>
using namespace std;
#include<ctime>
int main() {
	srand((unsigned int)time(NULL));//生成随机数，保证每局数字不一样
	int a = rand()%101;
	int b = 101;
	while(b!=a) {
	cout << "请输入你猜的数字：\n";
	cin >> b;
	if (b < a) {
		cout << "小了小了\n";
	}
	else if (b > a) {
		cout << "大了大了\n";
	};
	

	}
	cout << "恭喜你猜对了！" << endl;
	system("pause");
	return 0;
}

